@CHARSET "UTF-8";
/****************/
/*****修改密码页面****/
/****************/
div#main {
	overflow: hidden;
	padding-top:20px;
}

#changePwd {
	position: relative;
}

#changePwd ul {
	position: relative;
	width:410px;
	margin:0px auto;
	padding-top:20px;
	
}

#changePwd span {
	width: 130px;
	text-align: right;
	padding-right: 10px;
	float: left;
	height: 45px;
	line-height: 45px;
}

#changePwd li {
	height: 45px;
}

#changePwd input {
	width:194px;
	border: 1px solid #cccccc;
	font-size: 18px;
	margin: 6px 0px;
	padding: 5px 15px;
}

.submitButton2 {
	box-shadow: 0 0 2px #fff inset;
	text-shadow: 1px 1px 1px #fbe5ac;
	border-radius: 3px;
	font-weight: 400;
	background: #febf4d;
	background: linear-gradient(#ffd974, #febf4d);
	color: #614323;
	_border: none;
}

.submitButton2:hover, .submitButton2:focus {
	background-color: #ffd974;
	background-image: linear-gradient(#febf4d, #ffd974);
	border: 1px solid #c1913d;
}

#changePwd input#pwdBtn {
	border: 1px solid #e6b650;
	font-size: 20px;
	padding: 5px 10px;
	position: absolute;
	top: 180px;
	right: 44px;
	width:66px;
}

.error {
	color: #eb4f38;
	padding-left: 25px;
	background: url(../Image/adminIconList.png) no-repeat 0px -374px;
	position: absolute;
	right: 30px;
}

#error0 {
	top: 32px;
}

#error1 {
	top: 78px;
}

#error2 {
	top: 122px;
	_top:108px;
}
/****************/
/*****修改用户名页面****/
/****************/
#changeUserName {
	margin-top: 50px;
}

#changeUserName span {
	float: left;
	padding-right: 10px;
	text-align: right;
	width: 230px;
	line-height: 43px;
}

#changeUserName input {
	margin-top: 7px;
	border: 1px solid #cccccc;
	font-size: 18px;
	padding: 5px 25px;
	width:194px;
}

#changeUserName input#changeUserNameBtn {
	border: 1px solid #e6b650;
	font-size: 20px;
	padding: 5px 15px;
	position: absolute;
	right: 180px;
	top: 200px;
	width:79px;
	_border:none;
	_padding:2px;
}