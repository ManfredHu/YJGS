@CHARSET "UTF-8";

body {
	color: #3b3b3b;
}

div#content {
	overflow: hidden;
}

div.nowTips {
	padding-bottom: 20px;
	background: url(../Image/nowBG.png) no-repeat right top;
}

div.nowTips span {
	display: block;
	padding-left: 28px;
	background: url(../Image/userIconlist.png) no-repeat -7px -1px;
	margin-left: 35px;
}

div.nowTips a {
	color: #1169BF;
}

div.nowTips a:hover, div.nowTips a:focus {
	text-decoration: underline;
}
div.adviseList{
	padding:20px 40px;
}
div.oneAdvise{
	border-bottom:1px dashed #eee;
	padding:10px 60px 10px 140px;
	background:url(../Image/backgroundForH2.gif) no-repeat 70px -155px;
	overflow:hidden; 
}
div.oneAdvise p{
	width:760px;
	display:block;
	word-break:break-all; 
	overflow:auto;
}
div.oneAdvise span{
	height:25px;
	line-height:25px;
}
span.person{
	width:400px;
	text-align:left;
	float:left;
}
div.oneAdvise span.time,span.person{
	font-size:14px;
	color:#aaa;
}
p.adminReply{
	color:#ff6500;
}
div#pageNum {
	clear: both;
	height: 100%;
	padding-top: 10px;
	overflow: hidden;
	padding-left: 49px;
	padding-bottom:40px;
	border-bottom:1px solid #EBECEE;
}
div#pageNum a {
	margin: 0px 5px;
	border: 1px solid #e1e2e3;
	cursor: pointer;
	float: left;
	display: inline;
	height: 34px;
	width: 34px;
	line-height: 34px;
	text-align: center;
	color: #1169BF;
	border: 1px solid #e1e2e3;
}

div#pageNum a.upPage {
	width: 100px;
	background: url(../Image/iconfont-xiayi.png) no-repeat 15px 9px;
	padding-left: 8px;
	_background: none;
	_padding-left: 0px;
}

div#pageNum a.upPage:hover {
	background: url(../Image/iconfont-xiayi.png) no-repeat 15px 9px #f2f8ff;
	_background: #f2f8ff;
	border: 1px solid #38f;
}

div#pageNum a.downPage {
	width: 100px;
	padding-right: 8px;
	background: url(../Image/iconfont-xiayi.png) no-repeat 80px -41px;
	_background: none;
	_padding-right: 0px;
}

div#pageNum a.downPage:hover {
	background: url(../Image/iconfont-xiayi.png) no-repeat 80px -41px
		#f2f8ff;
	_background: #f2f8ff;
	border: 1px solid #38f;
}

div#pageNum a:hover {
	background: #f2f8ff;
	border: 1px solid #38f;
}
.number{
	color: #377cca;
    font: italic 30px arial;
    margin-right: 8px;
}
.textareaforadvise{
	width:655px;
	height:100px;
	border:1px solid #EBECEE;
	resize: none;
	padding:5px;
	margin-top:7px;
	font-size:14px;
}
.one{
	width:120px;
	float:left;
}
form.formforadvise{
	margin:30px auto 20px auto;
	width:800px;
}
.textinput{
	border:1px solid #EBECEE;
	height:25px;
	line-height:25px;
	margin-top:8px;
	padding:2px 5px;
	font-size:14px;
}
.youxiang{
	width:200px;
}
#yanzhengma{
	width:110px;
	float:left;
	display:inline;
	margin-left:120px;
	_margin-left:123px;/*3像素bug*/
}
a#checkNum{
	margin-top:8px;
	width:100px;
	height:30px;
	float:right;
	display:inline;
}
div.divyzm{
	width:360px;
	overflow:hidden;
	height:39px;
}
input.save{
	background: url(../Image/adviseButtonBG.png) no-repeat 0px 0px;
	height:35px;
	line-height:35px;
	width:88px;
	margin:20px 0px 0px 120px;
	color:#8f2e01;
	cursor:pointer;
}
input.save:hover{
	background:url(../Image/adviseButtonBG.png) no-repeat 0px -35px
}
form.productForm {
	height: 25px;
	line-height: 25px;
	text-align: right;
	float: left;
	display: inline;
	padding-left: 5px;
	/* width: 320px; */
}

form.productForm select {
	border: 1px solid #e1e2e3;
	font-size: 16px;
	width: 45px;
}

form.productForm input {
	background: none repeat scroll 0 0 #ffdf75;
	height: 24px;
	line-height: 24px;
	margin: 10px 0 0 10px;
	padding: 0px 4px;
	cursor:pointer;
}
