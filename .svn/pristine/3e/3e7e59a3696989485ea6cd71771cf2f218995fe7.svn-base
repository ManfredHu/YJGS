table.tb thead {
	color: #fff;
	text-align: center;
	background: none repeat scroll 0 0 #1169bf;
}

table.tb thead th {
	padding: 2px 0px;
}

tbody td {
	white-space: nowrap;
	text-overflow: ellipsis;
	overflow: hidden;
	padding: 5px 2px;
}

.adviser {
	width: 190px;
}

.time {
	width: 110px;
}

.toreply, .delete {
	width: 60px;
}

tbody a {
	color: #1169BF;
}

tbody a:hover {
	text-decoration: underline;
}

div#PageList {
	margin-top: 40px;
	overflow: hidden;
	margin-left: 20px;
	width:600px;
}

div#PageList a {
	margin: 0px 5px;
	border: 1px solid #e1e2e3;
	cursor: pointer;
	display: block;
	float: left;
	height: 34px;
	width: 34px;
	line-height: 34px;
	text-align: center;
	color: #1169BF;
	border: 1px solid #e1e2e3;
}

div#PageList a:hover {
	background: #f2f8ff;
	border: 1px solid #38f;
}

form.changePageForm {
	margin: 10px 0px 0px 330px;
}

select.changePage {
	border: 1px solid #ccc;
	font-size: 16px;
	width: 45px;
}

input.sure {
	background: none repeat scroll 0 0 #ffdf75;
	line-height: 20px;
	margin: 10px 0 0 10px;
	padding: 2px 4px;
	height: 24px;
}

