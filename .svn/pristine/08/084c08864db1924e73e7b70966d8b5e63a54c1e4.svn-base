@CHARSET "UTF-8";
/*******************************/
/***********添加管理员页面部分********/
/*******************************/
div#main {
	overflow: hidden;
	padding-top: 10px;
}

#addNewManager ul {
	position: relative;
}

#addNewManager span {
	width: 190px;
	text-align: right;
	padding-right: 10px;
	float: left;
}

#addNewManager li {
	margin: 15px 0;
	line-height: 43px;
}

#userName, #userAccount {
	padding: 10px 25px;
	font-size: 18px;
	border: 1px solid #cccccc;
}

#addNewManager dl {
	float: left;
	margin-top: 11px;
	overflow: visible;
}

#addNewManager dd {
	line-height: 25px;
}

#addNewManager dd input {
	margin-right: 5px;
}

#submit {
	float: left;
	position: absolute;
	top: 330px;
	left: 200px;
}

p#usererror, p#accounterror {
	position: absolute;
	padding-left: 20px;
	font-size: 16px;
	padding: 2px 2px 2px 23px;
	background: url(../Image/adminIconList.png) no-repeat 0px -372px;
	line-height: 21px;
	height: 21px;
}

p#usererror {
	top: 18px;
	right: 80px;
	color: #eb4f38;
}

p#accounterror {
	top: 78px;
	right: 96px;
	color: #eb4f38;
}
/*******************************/
/***********管理管理员页面部分********/
/*******************************/
#PermissionList {
	width: 655px;
}

#PermissionList thead {
	text-align: center;
	background: #1169BF;
	color: #fff;
}

#PermissionList tr td div {
	width: 110px;
	float: left;
	text-align: left;
	font-size: 14px;
}

tbody tr {
	background: #EAF5FF;
}

#PermissionList td {
	text-align: center;
}

thead th {
	padding: 2px 0px;
}

th.userNameList {
	width: 100px;
}

th.accountList {
	width: 130px;
}

th.permissionList {
	width: 361px;
}

th.deleteList {
	width: 60px;
}

td {
	padding: 2px 5px;
}

td a {
	color: #1169BF;
}

td a:hover {
	text-decoration: underline;
}

#ManagerListSubmit {
	float: right;
	margin: 40px 30px 0px 0px;
}

caption {
	padding: 5px;
	font-size: 20px;
}
/*******************************/
/*******申请的查看与处理页面部分********/
/*******************************/
table.atable,table.btable{
	text-align:center;
}
th.applier{
	width:80px;
}
th.aAccount{
	width:130px;
}
th.aDate{
	width:130px;
}
th.aPermission{
	width:180px;
}
th.aPass{
	width:120px;
}
table.atable td span{
	display:block;
	padding:3px 0 3px 45px;
	text-align:left;
}
thead{
	background: #1169BF;
	color: #fff;
}
#main h2{
	font-weight:100;
	font-size:20px;
	padding:5px 0px;
	margin-left:20px;
}
table.btable{
	margin-top:40px;
}
table.btable th.aPermission{
	width:140px;
}
table.btable th.aPass{
	width:100px;
}
table.btable th.aDelete{
	width:58px;
}
table.btable td span{
	display:block;
	padding:3px 0px 3px 20px;
	text-align:left;
}
caption.nopass,caption.pass{
	width:135px;
	margin:0px auto;
	padding-left:30px;
	background:url(../Image/adminIconList.png) no-repeat 0px -455px;
}
caption.nopass{
	background:url(../Image/adminIconList.png) no-repeat 0px -405px;
}
.pad{
	margin-right:5px;
}